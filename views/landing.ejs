
<%- include("partials/header") %>

<div class="container mt-3">
  <div class="row">
    <div class="col-lg-2 mt-3">
      <div class="list-group">
        <h5 class="list-group-item active text-center">Category</h5>
        <a href="/book/niyay" class="list-group-item list-group-item-action">Novel</a>
        <a href="/book/warasan" class="list-group-item list-group-item-action">Magazine</a>
        <a href="/book/cartoon" class="list-group-item list-group-item-action">Cartoon</a>
        <a href="/book/home" class="list-group-item list-group-item-action">House</a>
      </div>
    </div>

    <div class="col-lg-10">
      <div class="row">

        <% SongMa.forEach(function(im){ %>
        <div class="col-lg-3 col-sm-6 col-6 mt-4">
          <div class="card">
            <img src="<%= im.imgurl %>" height="450" width="300" class="img-fluid card-img"
              style="width: 100%; height: 257px;">
            <div class="card-body">
              <h5 class="card-title"><%= im.name %></h5>
              <p class="card-text"><%= im.desc %></p>
              <p class="card-text">Author : <%= im.author.username %></p>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star"></span>
              <span class="fa fa-star"></span>
            </div>
            <a class="btn btn-primary" href="/book/<%=im._id%>" role="button">Read More</a>
          </div>
        </div>
        <%}); %>

      </div>
    </div>

  </div>
</div>

<script>
  $(".sidebar2").ready(function () {
    $("#click-hidden2").click(function () {
      $("#chonlasit2").toggleClass("hidden");
    });
  });
</script>

<%- include("partials/footer") %>