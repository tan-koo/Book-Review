<script>
  $(".sidebar2").ready(function () {
    $("#click-hidden2").click(function () {
      $("#chonlasit2").toggleClass("hidden");
    });
  });
  function myFunction() {
    var input, filter, h5, txtValue;
    input = document.getElementById("searchinput");
    filter = input.value.toUpperCase();
    car = document.getElementsByClassName("card");
    li = document.getElementsByTagName("h5");
    for (i = 0; i < li.length; i++) {
      txtValue = li[i].textContent || li[i].innerText;
      if (txtValue.toUpperCase().indexOf(filter) > -1) {
        car[i].style.display = "";
      } else {
        car[i].style.display = "none";
      }
    }
  }
</script>

