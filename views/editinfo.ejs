
<%- include("partials/header") %>

<div class="container editinfo-section">
  <h3 class="text-center mb-4">Edit Information</h3>
  <form action="/user/<%= user._id %>/infoedit?_method=PUT" method="POST">
    <div class="form-group">
      <label for="commentText">Userame</label>
      <input type="text" class="form-control" name="name_user" value="<%= user.username%>">
    </div>
    <div class="form-group">
      <label for="commentText">Email</label>
      <input type="text" class="form-control" name="email_user" value="<%= user.email%>">
    </div>
    <button type="submit" class="btn btn-block btn-outline-success mt-3">Submit</button>
  </form>
</div>

<%- include("partials/footer") %>